{% extends 'base.html.twig' %}

{% block title %} Saison {% endblock %}
{% block body %}
    <h1>{{ program.title }} </h1>
    <div class="media">
    <img class="align-self-start mr-3 film-poster" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h2 class="mt-0">{{ season.description }} de {{ program.title }}</h2>
            <br>
                <p>Liste des épisodes:</p>
            <hr>
            <ul>
                <br>
                {% for episode in episodes %}
                    <li>
                        {{ episode.number }}: <a href="{{ path('program_episode_show', {program: program.id, season:season.id, episode:episode.id}) }}">
                            {{ episode.title }}</a>

                    </li>
                    <br>
                {% endfor %}

            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}